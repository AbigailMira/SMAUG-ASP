<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    @if (IsSectionDefined("ItemBg"))
    {
        @RenderSection("ItemBg")
    }

</head>
<body>
    

    <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapseNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Person List", "Index", "Persons")
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Arda List", "Index", "Ardas")
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Publication List", "Index", "Publications")
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Item List", "Index", "Items")
                </li>
            </ul>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()        
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
