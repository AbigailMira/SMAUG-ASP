@model SMAUG.Models.ItemDetailViewModel
@using SMAUG.Models
@using SMAUG.Dto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ItemBg{
    <body class="itemBg">

    </body>
}

<h2>Details</h2>

<div class="container">
    <div class="row">
        <div class="col text-center" name="item-data-right">
            <div>
                <p name="biblio-invention">test</p>
                <p name="person-adaptation">test</p>
                <p name="biblio-adaptation">test</p>
            </div>
        </div>
        <div class="col text-center" name="item-data-center">
            <div>J.R.R. Tolkien   </div>
            <div class="m-5 p-5">
                @foreach (DtoPerson p in Model.item.Makers)
                    {
                    @Html.DisplayFor(modelItem => p.FullName)
                }

            </div>
            <div class="m-5 p-5 item-name">
                @Html.DisplayFor(model => model.item.Ite_Name)
            </div>
            <div class="m-5 p-3">
                @Html.DisplayFor(model => model.item.Ite_ProdDate)
            </div>
            <div class="m-5 p-2">
                @Html.DisplayFor(model => model.item.Ite_Type)
            </div>
        </div>
        <div class="col text-center" name="item-data-left">
            <div>
                <p>test</p>
                <p>test</p>
                <p>test</p>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row" name="buttons">
            <div class="col-md-4">
                <div class="bg-transparent border rounded-circle border-3 border-danger">
                    <p class="text-center">Item link</p>
                </div>
            </div>
            <div class="col-md-4 offset-md-4">
                <div class="bg-transparent border rounded-circle border-3 border-danger">
                    <p class="text-center">Lists link</p>
                </div>
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Ite_Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
